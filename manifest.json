{
    "name": "BareBones MIDI Player",
    "short_name": "BareBones MIDI",
    "description": "It plays MIDI files.",
    "version": "0.9",
    "manifest_version": 2,
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "icons": {
        "128": "icons/bbm-128.png"
    },
    "file_handlers": {
        "midi": {
            "types": [
                "application/x-midi",
                "audio/midi"
            ],
            "extensions": [
                "mid",
                "midi"
            ],
            "title": "BareBones MIDI Player"
        }
    }
}